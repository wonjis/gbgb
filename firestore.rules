rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Events - publicly readable, writable by UMich users only
    match /events/{eventId} {
      allow read: if true;  // Anyone can browse events
      allow write: if request.auth != null && request.auth.token.email.matches('.*@umich.edu$');
    }

    // Users - users can only read/write their own document
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Sources - publicly readable, writable by UMich users only
    match /sources/{sourceId} {
      allow read: if true;  // Anyone can see event sources
      allow write: if request.auth != null && request.auth.token.email.matches('.*@umich.edu$');
    }
  }
}
